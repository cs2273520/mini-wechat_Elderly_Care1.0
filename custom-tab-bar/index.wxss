.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 48px;
  background: #005826;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
}
.tabbox{
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    width: 50%;
    height: 90%;
    box-sizing: border-box;
}
.select-active{
    border-bottom: 1px solid #1aad19;
}
.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.33);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: relative;
}

.tab-bar-item .cover-image {
  width: 50rpx;
  height: 50rpx;
}
.tab-bar-item .cover-image-info {
    width: 10px;
    height: 10px;
    background-color: white;
    position: absolute;
    left: 105rpx;
    top: 6rpx;
    border-radius: 50%;
  }

.tab-bar-item .cover-view {
  margin-top: 2rpx;
  font-size: 24rpx;
}
